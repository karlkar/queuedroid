<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_main_background_color"
    android:animateLayoutChanges="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    tools:context="com.kksionek.queuedroid.view.MainActivity">

    <RelativeLayout
        android:id="@+id/scroll_container"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_main_margin_top"
        android:layout_marginLeft="@dimen/activity_main_margin_outer"
        android:layout_marginRight="@dimen/activity_margin_inner"
        android:layout_marginBottom="@dimen/activity_main_margin_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ad_view_bg"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/main_activity_players_margin"
                android:paddingRight="@dimen/main_activity_players_margin"
                android:paddingBottom="@dimen/main_activity_players_margin"
                android:paddingTop="@dimen/main_activity_players_margin"
                android:background="@drawable/scroller_bg">

                <com.kksionek.queuedroid.view.PlayerContainerView
                    android:id="@+id/button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/main_activity_players_margin"
                    android:orientation="vertical"/>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ad_view_bg"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/scroller_bg">

            <com.google.android.gms.ads.AdView
                android:id="@+id/ad_view"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_main_margin_top"
        android:layout_marginLeft="@dimen/activity_margin_inner"
        android:layout_marginRight="@dimen/activity_main_margin_outer"
        android:layout_marginBottom="@dimen/activity_main_margin_bottom">

        <com.kksionek.queuedroid.view.keyboard.KeyboardView
            android:id="@+id/keyboard_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mode_bg"/>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/controlers_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/main_activity_players_margin"
            android:paddingRight="@dimen/main_activity_players_margin"
            android:paddingBottom="@dimen/main_activity_players_margin"
            android:paddingTop="@dimen/main_activity_players_margin"
            android:background="@drawable/scroller_bg"
            android:orientation="vertical">

            <Button
                android:id="@+id/first_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_big"
                android:layout_marginLeft="@dimen/main_activity_players_margin"
                android:layout_marginRight="@dimen/main_activity_players_margin"
                android:layout_marginTop="@dimen/main_activity_players_margin"
                android:layout_marginBottom="@dimen/main_activity_control_buttons_margin"/>

            <Button
                android:id="@+id/second_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_big"
                android:layout_marginLeft="@dimen/main_activity_players_margin"
                android:layout_marginRight="@dimen/main_activity_players_margin"
                android:layout_marginTop="@dimen/main_activity_control_buttons_margin"
                android:layout_marginBottom="@dimen/main_activity_control_buttons_margin"/>

            <Button
                android:id="@+id/third_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_big"
                android:layout_marginLeft="@dimen/main_activity_players_margin"
                android:layout_marginRight="@dimen/main_activity_players_margin"
                android:layout_marginTop="@dimen/main_activity_control_buttons_margin"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
