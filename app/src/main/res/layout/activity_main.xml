<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.kksionek.queuedroid.view.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/controlers_view">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/scroller_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_activity_players_margin"
                android:layout_marginRight="@dimen/main_activity_players_margin"
                android:orientation="vertical">

    <!--            <LinearLayout
                    android:id="@+id/game_mode_chooser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/main_activity_margin_buttons"
                    android:padding="@dimen/main_activity_margin_buttons"
                    android:orientation="vertical"
                    android:background="@drawable/mode_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/game_mode"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="@dimen/main_activity_margin_buttons"
                        android:paddingStart="@dimen/main_activity_margin_buttons"
                        android:layout_marginTop="@dimen/main_activity_margin_buttons"
                        android:text="@string/game_mode_points"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="@dimen/main_activity_margin_buttons"
                        android:paddingStart="@dimen/main_activity_margin_buttons"
                        android:layout_marginTop="@dimen/main_activity_margin_buttons"
                        android:text="@string/game_mode_time"/>
                </LinearLayout>
    -->
                <com.kksionek.queuedroid.view.PlayerContainerView
                    android:id="@+id/button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/main_activity_players_margin"
                    android:layout_marginTop="@dimen/main_activity_players_margin"
                    android:background="@drawable/players_bg"
                    android:orientation="vertical"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- TODO: Make keepScreenOn customizable via settings -->
    <com.kksionek.queuedroid.view.keyboard.KeyboardView
        android:id="@+id/keyboard_view"
        android:visibility="gone"
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/controlers_view"
        android:background="@drawable/mode_bg"/>

    <LinearLayout
        android:id="@+id/controlers_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ad_view_bg"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_game_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_big"
            android:layout_marginLeft="@dimen/main_activity_players_margin"
            android:layout_marginRight="@dimen/main_activity_players_margin"
            android:layout_marginTop="@dimen/main_activity_control_buttons_margin"
            android:layout_marginBottom="@dimen/main_activity_control_buttons_margin"
            android:text="@string/play"/>

        <Button
            android:id="@+id/end_game_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_big"
            android:layout_marginLeft="@dimen/main_activity_players_margin"
            android:layout_marginRight="@dimen/main_activity_players_margin"
            android:layout_marginTop="@dimen/main_activity_control_buttons_margin"
            android:layout_marginBottom="@dimen/main_activity_control_buttons_margin"
            android:visibility="gone"
            android:text="@string/end_game"/>

        <Button
            android:id="@+id/share_game_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_big"
            android:layout_marginLeft="@dimen/main_activity_players_margin"
            android:layout_marginRight="@dimen/main_activity_players_margin"
            android:layout_marginTop="@dimen/main_activity_control_buttons_margin"
            android:layout_marginBottom="@dimen/main_activity_control_buttons_margin"
            android:visibility="gone"
            android:text="@string/share"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ad_view_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:background="@android:color/black">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"/>
    </LinearLayout>

</RelativeLayout>
