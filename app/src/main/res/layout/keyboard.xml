<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current player points: "/>

        <TextView
            android:id="@+id/cur_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="0"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/button_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyboard_item_gap_size"
        android:paddingLeft="@dimen/keyboard_control_buttons_padding"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="5">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyboard_item_gap_size"
            android:layout_marginRight="@dimen/keyboard_item_gap_size"
            android:background="@drawable/btn_small"
            android:layout_weight="1"
            android:text="C"/>

        <Button
            android:id="@+id/backspace_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyboard_item_gap_size"
            android:layout_marginRight="@dimen/keyboard_item_gap_size"
            android:background="@drawable/btn_small"
            android:layout_weight="1"
            android:text="@string/view_keyboard_char_backspace"/>
    </LinearLayout>
</LinearLayout>